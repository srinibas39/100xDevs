
generator client {
  provider = "prisma-client-js"
  // output   = "src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id  Int @default(autoincrement()) @unique
  username String 
  email String @unique
  password String
}

model Todo{
  id Int @default(autoincrement()) @unique
  title String 
  description String
  done Boolean @default(false)
  userId Int
}
