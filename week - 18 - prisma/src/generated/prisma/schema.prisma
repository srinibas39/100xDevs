generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @unique @default(autoincrement())
  username String
  email    String @unique
  password String
}

model Todo {
  id          Int    @unique @default(autoincrement())
  title       String
  description String
  // done Boolean @default(false)
  userId      Int
}
